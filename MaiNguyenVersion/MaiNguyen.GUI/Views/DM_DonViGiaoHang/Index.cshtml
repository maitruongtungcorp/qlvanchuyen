
@{
    ViewBag.Title = "Danh mục đơn vị giao hàng";
}
@model MaiNguyen.GUI.Business.ViewModel.DM_DonViGiaoHang.DM_DonViGiaoHangViewModel

<link href="@Url.Content("~/Content/khachHang.css")" rel="stylesheet">
<script src="@Url.Content("~/Scripts/dm_donvigiaohang.js")" type="text/javascript"></script>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Danh mục đơn vị giao hàng</h2>
                <div class="text-right">
                    <a href="@Url.Action("Update")" class="btn btn-warning btn-sm"> <i class="fa fa-plus"></i> Thêm mới</a>
                    <a class="btn btn-success btn-sm"><i class="fa fa-file-excel-o"></i> Export excel</a>
                </div>

            </div>
            <div class="x_content">
                <div class="row">
                    @using (Ajax.BeginForm("Index", "DM_DonViGiaoHang", null, new AjaxOptions
                    {
                        UpdateTargetId = "khachang-searchlist",
                        HttpMethod = "Post",
                        OnBegin = "Common.DM_DonViGiaoHang.BeforeSend",
                        OnSuccess = "Common.DM_DonViGiaoHang.Success",
                        OnFailure = "Common.DM_DonViGiaoHang.Error"
                    }, new { @class = "form-search form-inline form-label-left", @role = "form", @id = "khachhang-search-form" }))
                    {
                        <div class="hidden">
                            <input name="SearchModel.PageNum" value="1" />
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <div class="form-group">
                                <label class="control-label">Số dòng hiển thị: </label>
                                @Html.DropDownListFor(model => model.SearchModel.PageSize, MaiNguyen.GUI.Business.Common.BaseQuery.GetBinaryPageEntries(), new { @class = "form-control input-sm" })

                            </div>
                        </div>
                        <div class="col-sm-12 col-md-8 text-right">
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.SearchModel.Search, new { @class = "form-control", @placeholder = "Tìm theo tên, số điện thoại, email, tên công ty, ..." })
                                <span class="input-group-btn" style="width: 1%;">
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </div>
                    }
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div id="khachang-searchlist" class="table-responsive">
                            @{ Html.RenderPartial("_IndexPartialView", Model); }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        if (Common.Empty(Common.DM_DonViGiaoHang)) {
            Common.DM_DonViGiaoHang = new DM_DonViGiaoHang({
                Url: {
                    Delete: '@Url.Action("Delete", "DM_DonViGiaoHang")',
                },
            });
        }
        else {
            Common.DM_DonViGiaoHang.RegisterEvent();
        }
    });
</script>