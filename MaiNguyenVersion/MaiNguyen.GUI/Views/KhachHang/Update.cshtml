@using MaiNguyen.Entities.Common;
@{
    ViewBag.Title = "Thêm mới";
}
<link href="@Url.Content("~/Content/khachHang.css")" rel="stylesheet">
<script src="@Url.Content("~/Scripts/khachhang.js")" type="text/javascript"></script>
@model MaiNguyen.Entities.KhachHang.KhachHangAddModel
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Chi tiết khách hàng</h2>
                <div class="text-right">
                    <a href="@Url.Action("Index")" class="btn btn-default btn-sm"> <i class="fa fa-arrow-left" aria-hidden="true"></i> Trờ về</a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @using (Html.BeginForm("Update", "KhachHang", FormMethod.Post, new { @id = "form-update-khachhang", @class = "cmxform form-horizontal form-label-left" }))
                {
                
                    @Html.HiddenFor(model => model.Id)
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Mã khách hàng 
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.MaKH, new { @class = "form-control col-md-7 col-xs-12", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Họ tên <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          @Html.TextBoxFor(model => model.TenKH, new { @class = "form-control col-md-7 col-xs-12" })
                          @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "required" })
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Điện thoại <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.DienThoai, new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(model => model.DienThoai,"", new { @class= "required"})
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Email <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "required" })
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Địa chỉ
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                           @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control col-md-7 col-xs-12" })
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                           Thành phố 
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(model => model.ThanhPhoID, ViewData["ListThanhPho"] as IEnumerable<SelectListItem>, new { @class = "form-control col-md-7 col-xs-12" })
                        </div>
                    </div>
                    
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Công ty
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.TenCongTy, new { @class = "form-control col-md-7 col-xs-12" })
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Số đơn hàng
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.SoDonHang, new { @class = "form-control col-md-7 col-xs-12", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Ghi chú 
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextAreaFor(model => model.GhiChu, 5, 1, new { @class = "form-control col-md-7 col-xs-12" })
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <a href="@Url.Action("Update")" class="btn btn-warning btn-sm"> <i class="fa fa-plus"></i> Thêm cơ hội</a>
                            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu</button>
                            <a href="@Url.Action("Index")" class="btn btn-danger btn-sm"><i class="fa fa-ban" aria-hidden="true"></i> Hủy</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        if (Common.Empty(Common.KhachHang)) {
            Common.KhachHang = new KhachHang({
                TenDangNhap:'@ViewBag.TenDangNhap'
            });
        }
    });
</script>